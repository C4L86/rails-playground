<h2>TOTAL ROUND RESULTS</h2>

<p>
  <!-- Need to figure out the correct route for the below link -->
  <%= link_to("Back", "/movie_stats/#{@movie.id}") %>
  <%= link_to("Vote Again?", "/", {class: "new_vote"}) %>
  <%= link_to("Log Out", destroy_user_session_path, :method => :delete) %>
</p>

<p>
  <%= @movie.title.upcase %>
  <% @votes.each do |round| %>    
    <% if round.upvote_id == @movie.id %>
      WIN vs <%= Movie.find(round.downvote_id).title %>
    <% elsif round.downvote_id == @movie.id %>
      LOSS vs <%= Movie.find(round.upvote_id).title %>
    <% end %>
  <% end %>
</p>